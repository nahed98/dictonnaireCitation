{% extends 'base.html.twig' %}
{% block body %}
<h1>Inscription sur le site !</h1>
{{ form_start(form)}}

{{form_row(form.username,{'label':"Nom de l'utilisateur",'attr':{'placeholder':"nom de l'utilisateur..."}})}}
{{form_row(form.email,{'label':"Adresse email",'attr':{'placeholder':"Adresse email...",'pattern':'[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$'}})}}
{{form_row(form.password,{'label':"Mot de passe ",'attr':{'placeholder':"Mot de passe !"}})}}
{{form_row(form.confirm_password,{'label':"Confirmation du mot de passe ",'attr':{'placeholder':"Confirmation du mot de passe !"}})}}
<button type="submit">
Inscription !
</button>
{{form_end(form)}}

{% endblock %}